# ==============================================
# ADS FINDER PRO - ENVIRONMENT VARIABLES
# ==============================================
# Copia este archivo a .env y configura tus valores

# ==============================================
# DATABASE CONFIGURATION
# ==============================================
MONGO_URL=mongodb://admin:adsfinder123@localhost:27017/adFinder?authSource=admin
DB_NAME=adFinder
DB_PASSWORD=adsfinder123

# ==============================================
# API KEYS (OBLIGATORIAS - DEBES CONFIGURAR)
# ==============================================
FACEBOOK_ACCESS_TOKEN=your-facebook-access-token-here
GEMINI_API_KEY=your-gemini-api-key-here
APIFY_API_TOKEN=your-apify-api-token-here

# ==============================================
# JWT AUTHENTICATION
# ==============================================
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# ==============================================
# RATE LIMITING (requests per window)
# ==============================================
SEARCH_RATE_LIMIT_WINDOW=3600000
SEARCH_RATE_LIMIT_MAX=100
AI_RATE_LIMIT_WINDOW=3600000
AI_RATE_LIMIT_MAX=50
SCRAPING_RATE_LIMIT_WINDOW=900000
SCRAPING_RATE_LIMIT_MAX=50
API_RATE_LIMIT_WINDOW=900000
API_RATE_LIMIT_MAX=1000

# ==============================================
# CACHE CONFIGURATION (TTL in seconds)
# ==============================================
SEARCH_CACHE_TTL=1800
STATS_CACHE_TTL=3600
AI_CACHE_TTL=7200
SEARCH_CACHE_MAX_ITEMS=1000
STATS_CACHE_MAX_ITEMS=5000
AI_CACHE_MAX_ITEMS=500

# ==============================================
# BROWSER POOL CONFIGURATION
# ==============================================
MAX_BROWSERS=3
BROWSER_IDLE_TIME=300000
BROWSER_LIFE_TIME=1800000
BROWSER_CLEANUP_INTERVAL=60000

# ==============================================
# MONITORING THRESHOLDS
# ==============================================
SLOW_REQUEST_THRESHOLD=5000
HIGH_MEMORY_THRESHOLD=85
HIGH_RESPONSE_TIME_THRESHOLD=2000

# ==============================================
# EXTERNAL API TIMEOUTS (milliseconds)
# ==============================================
FACEBOOK_API_TIMEOUT=900000
APIFY_TIMEOUT=900000

# ==============================================
# APPLICATION SETTINGS
# ==============================================
NODE_ENV=production
PORT=3000
