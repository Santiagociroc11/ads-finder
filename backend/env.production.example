# ===== PRODUCTION ENVIRONMENT VARIABLES =====
# Copy this file to .env and fill in your actual values

# ===== REQUIRED =====
FACEBOOK_ACCESS_TOKEN=your_facebook_token_here
MONGO_URL=mongodb://localhost:27017
JWT_SECRET=your_super_secure_jwt_secret_here_at_least_64_characters_long

# ===== OPTIONAL =====
APIFY_API_TOKEN=your_apify_token_here
GEMINI_API_KEY=your_gemini_api_key_here

# ===== PRODUCTION SETTINGS =====
NODE_ENV=production
PORT=3000
FRONTEND_URL=https://yourdomain.com

# ===== DATABASE SETTINGS =====
DB_NAME=adFinder
MONGO_MAX_POOL_SIZE=50
MONGO_MIN_POOL_SIZE=5

# ===== RATE LIMITING =====
# Search rate limiting (per 15 minutes)
SEARCH_RATE_LIMIT=20
AI_RATE_LIMIT=10
SCRAPING_RATE_LIMIT=5

# General API rate limiting (per minute)
API_RATE_LIMIT=100

# ===== CACHE SETTINGS =====
# Cache TTL in seconds
SEARCH_CACHE_TTL=3600        # 1 hour
STATS_CACHE_TTL=1800         # 30 minutes  
AI_CACHE_TTL=86400           # 24 hours

# ===== BROWSER POOL SETTINGS =====
MAX_BROWSERS=3               # Max concurrent browsers
BROWSER_IDLE_TIME=300000     # 5 minutes
BROWSER_LIFE_TIME=1800000    # 30 minutes

# ===== MONITORING =====
ENABLE_MONITORING=true
LOG_LEVEL=info               # debug, info, warn, error

# ===== SECURITY =====
ENABLE_CORS=true
CORS_ORIGIN=https://yourdomain.com
SESSION_SECRET=your_session_secret_here

# ===== EXTERNAL APIS =====
# Facebook API rate limits
FACEBOOK_API_CALLS_PER_HOUR=200

# Gemini AI rate limits  
GEMINI_API_CALLS_PER_MINUTE=60

# ===== DEPLOYMENT =====
# For Docker/Cloud deployment
HEALTH_CHECK_INTERVAL=30000  # 30 seconds
GRACEFUL_SHUTDOWN_TIMEOUT=30000  # 30 seconds

# ===== BACKUP =====
# For automated backups
BACKUP_ENABLED=true
BACKUP_INTERVAL=86400000     # 24 hours
BACKUP_RETENTION_DAYS=30
